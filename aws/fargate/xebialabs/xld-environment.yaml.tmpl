---
apiVersion: xl-deploy/v1
kind: Infrastructure
spec:
- name: myAWS
  type: core.Directory
  children:
  - name: aws
    accessSecret: {{.AWS_SECRET}}
    accesskey: {{.AWS_ACCESS_KEY}}
    type: aws.Cloud
---
apiVersion: xl-deploy/v1
kind: Environments
spec:
- name: myAWS
  type: core.Directory
  children:
  - name: Environments/myAWS/DEV-AWS
    type: udm.Environment
    members:
    - Infrastructure/myAWS/aws
    dictionaries:
    - Environments/myAWS/AWS-dict
  - name: Environments/myAWS/AWS-dict
    type: udm.Dictionary
    entries:
      username: rbroker
      region: {{.AWS_REGION}}
